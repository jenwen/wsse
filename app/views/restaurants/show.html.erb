<h1><%= @restaurant.name %></h1>
  <%# this form needs remote: true %>
<div id="server-feedback"></div>
  <%= form_for [@restaurant, @comment], remote: true do |f| %>
  <%= f.label "Add Comment:" %>
  <%= f.text_field :content %>
  <%= f.submit "Submit" %>
<% end %>
<ul class="comments">
<% @restaurant.comments.each do |comment| %>
  <% if comment.content %>
  <li>
    <%= comment.content %>
    <%= link_to "Up Vote", votes_path(comment_id: comment.id, vote_data: {opinion: true}), method: :post %>
    post :create, comment_id: 1, post: attributes
  </li>
  <% end %>
<% end %>
</ul>

<i class="fa fa-thumbs-up"></i><i class="fa fa-thumbs-down"></i>